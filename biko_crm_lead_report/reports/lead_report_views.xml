<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="biko_consolidated_report_pivot" model="ir.ui.view">
        <field name="name">Consolidated report (WEBA)</field>
        <field name="model">biko.consolidated.report</field>
        <field name="arch" type="xml">
            <pivot string="consolidated_report" disable_linking="1">
                <field name="company_id" type="row" />
                <field name="line_group" type="row" />
                <field name="line_caption" type="row" />
                <field name="line_value" type="measure" />
            </pivot>
        </field>
    </record>
</odoo>
